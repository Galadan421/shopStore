{% extends 'base_admin.html.twig' %}

{% block title %}Liste des articles!{% endblock %}

{% block body %}

<div class = "jumbotron">
    <h1 style="text-align:center"><mark>Articles</mark></h1>
</div>
<td><button type="submit" style="background-color:#6174D1" href="#" class="btn btn-primary">Créer</button></td>
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>Id</th>
        <th>Titre</th>
        <th>Contenu</th>
        <th>Image</th>
        <th>Date</th>
        <th>Titre catégorie</th>
    </tr>
    {%for article in articles %}
        <tr>
            <td>{{ article.id }}</td>
            <td>{{ article.title }}</td>
            <td>{{ article.content }}</td>
            <td>{{ article.image }}</td>
            <td>{{ article.createdAt | date('d/m/Y H:i') }}</td>
            <td>{{ article.category.title }}</td>
            <td><button type="submit" class="btn btn-warning" href="#" >Editer</button></td>
            <td><button type="submit" class="btn btn-danger">Supprimer</button></td>
        </tr>
    {% endfor %}
</table>
{% endblock %}