{% extends 'base_admin.html.twig' %}

{% block title %}Liste des catégories!{% endblock %}

{% block body %}

<div class = "jumbotron">
    <h1 style="text-align:center"><mark>Catégories</mark></h1>
</div>
<button class="btn btn-secondary"> <a class="nav-link" style="color:white;text-align:center;text-decoration:underline" href="#" aria-disabled="true">Créer</a>
</button>
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>Id</th>
        <th>Titre</th>
        <th>Contenu</th>
        <th>Description</th>
    </tr>
    {%for category in categories %}
        <tr>
            <td>{{ category.id }}</td>
            <td>{{ category.title }}</td>
            <td>{{ category.content }}</td>
            <td>{{ category.description }}</td>
            <td><button type="submit" class="btn btn-warning" href="#">Editer</button></td>
            <td><button type="submit" class="btn btn-danger">Supprimer</button></td>
        </tr>
    {% endfor %}
</table>
{% endblock %}