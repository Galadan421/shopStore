{% extends 'base.html.twig' %}

{% block title %}AccessLocation{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="jumbotron">
    <div class="example-wrapper">
        <h1 style="text-decoration:underline">Une liste de 15 articles</h1>
        <div class="container-fluid">
            <section class='articles'>
                <div class="row">
                    <div class="col-4">
                        {%for article in articles | slice(0,length=5) %}
                        <article>
                            <h3>{{article.title}}</h3>
                            <img src=" {{ article.image }} " alt="" width="220">
                            <p>{{article.content}}</p>
                            <hr>   
                        </article>
                        {% endfor%}
                    </div>
                    <div class="col-4">
                        {%for article in articles | slice(5,length=5) %}
                        <article>
                            <h3>{{article.title}}</h3>
                            <img src=" {{ article.image }} " alt=""  width="220">
                            <p>{{article.content}}</p>
                            <hr>   
                        </article>
                        {% endfor%}
                    </div>
                    <div class="col-4">
                        {%for article in articles | slice(10,length=5) %}
                        <article>
                            <h3>{{article.title}}</h3>
                            <img src=" {{ article.image }} " alt=""  width="220">
                            <p>{{article.content}}</p>
                            <hr>   
                        </article>
                        {% endfor%}
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
{% endblock %}
